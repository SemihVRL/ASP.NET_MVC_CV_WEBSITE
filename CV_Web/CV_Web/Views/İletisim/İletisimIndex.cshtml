@using CV_Web.Models.EntityFramework
@model List<TBLİLETİSİM>
@{
    ViewBag.Title = "İletisimIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                       
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->

                                        @foreach (var x in Model)
                                        {


                                        <div class="time-label">
                                            <span class="bg-info">
                                             @(((DateTime)x.Tarih).ToString("dd-MMM-yyyy"))
                                            </span>
                                           
                                        </div>
                                        <div>
                                                <i class="fas fa-comments bg-info"></i>
                                           
                                           
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 27 mins ago</span>
                                                <h3 class="timeline-header"><a href="#">@x.AdSoyad</a> @x.Konu</h3>
                                                <div class="timeline-body">
                                                   @x.Mesaj
                                                </div>  
                                            </div>


                                            </div>
                                        }
                                     </div>
                                       
                                      
                                       
                                    
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        
    </section>
</body>
</html>
