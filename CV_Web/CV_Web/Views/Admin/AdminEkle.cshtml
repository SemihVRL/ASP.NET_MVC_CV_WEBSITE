@model CV_Web.Models.EntityFramework.TBLADMİN
@{
    ViewBag.Title = "AdminEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Admin Ekleme Sayfası</h2>
<br />

<form class="form-group" method="post">
    <div>

        @Html.Label("Kullanıcı Adı")

        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı Giriniz" })

        @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @style = "color:red" })
    </div>

    <div>


        @Html.Label("Şifre")



        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifrenizi oluşturunuz yazınız" })

        @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color:red" })
    </div>

    <br />


    <button class="btn btn-danger">Ekle</button>
</form>


